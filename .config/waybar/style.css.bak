* {
	border: none;
	border-radius: 10px;
  font-family: "SauceCodePro Nerd Font" ;
	font-size: 15px;
	min-height: 10px;
}

window#waybar {
	background: transparent;
}

window#waybar.hidden {
	opacity: 0.2;
}

#window {
	margin-top: 6px;
	padding-left: 10px;
	padding-right: 10px;
	border-radius: 10px;
	transition: none;
    color: transparent;
	background: transparent;
}
#tags {
	margin-top: 6px;
	margin-left: 12px;
	font-size: 4px;
	margin-bottom: 0px;
	border-radius: 10px;
	min-width: 0;
	background: #282828;
	transition: none;
}

#tags button {
	min-width: 50px;
	transition: none;
	color: #a89984;
	background: transparent;
	font-size: 16px;
	border-radius: 2px;
}

#tags button.occupied {
	transition: none;
	color: #BF826A;
	background: transparent;
	font-size: 4px;
}

#tags button.focused {
	color: #aceaa5;
    border-top: 2px solid #aceaa5;
    border-bottom: 2px solid #aceaa5;
}

#tags button:hover {
	transition: none;
	box-shadow: inherit;
	text-shadow: inherit;
	color: #ebdbb2;
    border-color: #ebdbb2;
    color: #ebdbb2;
}

#tags button.focused:hover {
    color: #ebdbb2;
}

#tags button.urgent {
        border-top: 2px solid #fb4934;
        border-bottom: 2px solid #fb4934;
}

#workspaces button {
        padding: 0 0 0 0;
        margin: 4px 3px 6px 3px;
        background-color: #282828;
        color: #9bc9ab;
        min-width: 36px;
}

#workspaces button.active {

        padding: 0 0 0 0;
        margin: 4px 3px 6px 3px;
        background-color: #9bc9ab;
        color: #282828;
        min-width: 36px;
}

#workspaces button:hover {
        background: rgba(0, 0, 0, 0.2);
}

#workspaces button.focused {
        background-color: #bbccdd;
        color: #323232;
}

#workspaces button.urgent {
        background-color: #fb4934;
}

#window,
#workspaces {
        margin: 0 4px;
}

.modules-left > widget:first-child > #workspaces {
        margin-left: 0;
}

.modules-right > widget:first-child > #workspaces {
        margin-right: 0;
}

