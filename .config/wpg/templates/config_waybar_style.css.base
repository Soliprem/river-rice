* {{
	border: none;
	border-radius: 10px;
  font-family: "SauceCodePro Nerd Font" ;
	font-size: 15px;
	min-height: 10px;
}}

window#waybar {{
	background: transparent;
}}

window#waybar.hidden {{
	opacity: 0.2;
}}

#window {{
	margin-top: 6px;
	padding-left: 10px;
	padding-right: 10px;
	border-radius: 10px;
	transition: none;
    color: transparent;
	background: transparent;
}}
#tags {{
	margin-top: 6px;
	margin-left: 12px;
	font-size: 4px;
	margin-bottom: 0px;
	border-radius: 10px;
	min-width: 0;
	background: {color0};
	transition: none;
}}

#tags button {{
	min-width: 50px;
	transition: none;
	color: {color7};
	background: transparent;
	font-size: 16px;
	border-radius: 2px;
}}

#tags button.occupied {{
	transition: none;
	color: {color9};
	background: transparent;
	font-size: 4px;
}}

#tags button.focused {{
	color: {color10};
    border-top: 2px solid {color10};
    border-bottom: 2px solid {color10};
}}

#tags button:hover {{
	transition: none;
	box-shadow: inherit;
	text-shadow: inherit;
	color: {color15};
    border-color: {color15};
    color: {color15};
}}

#tags button.focused:hover {{
    color: {color15};
}}

#tags button.urgent {{
        border-top: 2px solid #fb4934;
        border-bottom: 2px solid #fb4934;
}}

#workspaces button {{
        padding: 0 0 0 0;
        margin: 4px 3px 6px 3px;
        background-color: {color0};
        color: {color12};
        min-width: 36px;
}}

#workspaces button.active {{

        padding: 0 0 0 0;
        margin: 4px 3px 6px 3px;
        background-color: {color12};
        color: {color0};
        min-width: 36px;
}}

#workspaces button:hover {{
        background: rgba(0, 0, 0, 0.2);
}}

#workspaces button.focused {{
        background-color: {color10};
        color: #323232;
}}

#workspaces button.urgent {{
        background-color: #fb4934;
}}

#window,
#workspaces {{
        margin: 0 4px;
}}

.modules-left > widget:first-child > #workspaces {{
        margin-left: 0;
}}

.modules-right > widget:first-child > #workspaces {{
        margin-right: 0;
}}

